{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Transcribe Audio to SRT (Base Model)",
            "type": "shell",
            "command": "python",
            "args": [
                "transcribe.py",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.srt",
                "--model", "base"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Transcribe Audio to VTT (Base Model)",
            "type": "shell",
            "command": "python",
            "args": [
                "transcribe.py",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.vtt",
                "--model", "base"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Transcribe Audio to SRT (Small Model - Better Quality)",
            "type": "shell",
            "command": "python",
            "args": [
                "transcribe.py",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.srt",
                "--model", "small",
                "--beam-size", "7"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Transcribe Audio to SRT (Medium Model - High Quality)",
            "type": "shell",
            "command": "python",
            "args": [
                "transcribe.py",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.srt",
                "--model", "medium",
                "--beam-size", "8"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Transcribe Audio (Custom Settings)",
            "type": "shell",
            "command": "python",
            "args": [
                "transcribe.py",
                "${input:audioFile}",
                "${input:outputFile}",
                "--model", "${input:modelSize}",
                "--beam-size", "${input:beamSize}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "inputs": [
        {
            "id": "audioFile",
            "type": "promptString",
            "description": "Path to audio file (or use ${file} for current file)",
            "default": "${file}"
        },
        {
            "id": "outputFile",
            "type": "promptString",
            "description": "Output subtitle file path",
            "default": "${fileDirname}/${fileBasenameNoExtension}.srt"
        },
        {
            "id": "modelSize",
            "type": "pickString",
            "description": "Select Whisper model size",
            "options": [
                "tiny",
                "base",
                "small",
                "medium",
                "large-v2",
                "large-v3"
            ],
            "default": "base"
        },
        {
            "id": "beamSize",
            "type": "pickString",
            "description": "Select beam size (higher = better quality but slower)",
            "options": [
                "1",
                "3",
                "5",
                "7",
                "10"
            ],
            "default": "5"
        }
    ]
}
